<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
  http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd"
  objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">

  <changeSet id="01-add-initial-schema" author="katsiaryna.charniauskaya">

    <preConditions onFail="MARK_RAN">
      <not>
        <tableExists tableName="client"/>
        <tableExists tableName="transaction"/>
      </not>
    </preConditions>

    <createTable tableName="client">
      <column name="id" type="UUID">
        <constraints nullable="false" primaryKey="true" primaryKeyName="clientId"/>
      </column>

      <column name="email" type="VARCHAR(100)">
        <constraints nullable="false"/>
      </column>
    </createTable>

    <createTable tableName="transaction">
      <column name="id" type="UUID">
        <constraints nullable="false" primaryKey="true" primaryKeyName="transactionId"/>
      </column>

      <column name="bank" type="VARCHAR(100)">
        <constraints nullable="false"/>
      </column>

      <column name="client_id" type="UUID">
        <constraints nullable="false" primaryKey="false"/>
      </column>

      <column name="order_type" type="VARCHAR(50)">
        <constraints nullable="false" primaryKey="false"/>
      </column>

      <column name="quantity" type="int">
        <constraints nullable="false" primaryKey="false"/>
      </column>

      <column name="price" type="double">
        <constraints nullable="false" primaryKey="false"/>
      </column>

      <column name="created_at" type="timestamp" defaultValueComputed="CURRENT_TIMESTAMP">
        <constraints nullable="false"/>
      </column>

    </createTable>
  </changeSet>
</databaseChangeLog>